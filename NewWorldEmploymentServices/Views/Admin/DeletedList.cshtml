@model NewWorldEmploymentServices.Models.PostJobViewModel

@{
    ViewData["Title"] = "DeleteJob";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1; 
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Deleted Job List</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        S.No
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.JobName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.JobLocation)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PostedJobList)
                                {
                                    <tr>
                                        <td>
                                            @i
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.JobName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.JobLocation)
                                        </td>


                                        <td>
                                            @Html.ActionLink("Restore", "Restore", new { id = item.JobId }, new { @class = "btn btn-primary" }) |

                                            @Html.ActionLink("Delete", "MarkAsDeleted", new { id = item.JobId }, new { @class = "btn btn-danger" })
                                        </td>

                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>



